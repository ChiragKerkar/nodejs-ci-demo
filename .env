# Database Credentials (Must match those in your docker-compose.yml)
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=nodejsdb

# Connection Host: The local Node.js app connects to the Docker-exposed port via localhost.
DB_HOST=localhost
DB_PORT=5433

# Optional: Full URL format (useful for ORMs)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
